<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<?import de.hdm_stuttgart.mi.gameoflife.controllers.components.UIZoomableScrollPane?>
<?import javafx.scene.shape.Box?>
<?import de.hdm_stuttgart.mi.gameoflife.controllers.components.UIZoomSlider?>
<?import de.hdm_stuttgart.mi.gameoflife.controllers.components.UISpeedSlider?>
<?import java.net.URL?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="de.hdm_stuttgart.mi.gameoflife.controllers.GameController" styleClass="main">
    <top>
        <HBox alignment="CENTER_LEFT">
            <BorderPane.margin>
                <Insets left="15" right="15" top="15" bottom="15"/>
            </BorderPane.margin>
            <Button prefHeight="32" text="Back" onAction="#navigateToMenu"/>
            <spacing>15</spacing>
            <ImageView fx:id="imageView"
                       fitHeight="150.0"
                       fitWidth="400.0"
                       layoutX="61.0"
                       layoutY="83.0"
                       pickOnBounds="true"
                       preserveRatio="true">
                <image>
                    <Image url="@../images/logo_1.png" backgroundLoading="true" />
                </image>
            </ImageView>
        </HBox>
    </top>
    <left></left>
    <right></right>
    <center>
        <HBox alignment="CENTER" id="wrapper" fx:id="wrapper"></HBox>
    </center>
    <bottom>
        <VBox>
            <BorderPane.margin>
                <Insets left="15" right="15" top="15" bottom="15"/>
            </BorderPane.margin>
            <HBox alignment="CENTER">
                <BorderPane.margin>
                    <Insets left="15" right="15" top="15" bottom="15"/>
                </BorderPane.margin>
                <Button prefWidth="80" prefHeight="32" text="&#9632;  Reset" onAction="#resetClicked"/>
                <spacing>10</spacing>
                <Button prefWidth="80" prefHeight="32" text="&#10074;  Pause" onAction="#pauseClicked"/>
                <spacing>10</spacing>
                <Button prefWidth="80" prefHeight="32" text="&#9654;  Start" onAction="#startClicked"/>
                <spacing>10</spacing>
                <Button prefWidth="80" prefHeight="32" text="&#9654;&#9654;  Next" onAction="#nextClicked"/>
                <spacing>10</spacing>
                <HBox alignment="CENTER" prefWidth="150">
                    <Text>Generation: </Text>
                    <Text id="generationCount" fx:id="generationCount">0</Text>
                </HBox>
            </HBox>
            <spacing>30</spacing>
            <HBox alignment="CENTER">
                <BorderPane.margin>
                    <Insets left="15" right="15" top="15" bottom="15"/>
                </BorderPane.margin>
                <Label>Zoom:</Label>
                <UIZoomSlider id="zoomSlider" fx:id="zoomSlider"></UIZoomSlider>
                <spacing>55</spacing>
                <Label>Speed:</Label>
                <UISpeedSlider id="speedSlider" fx:id="speedSlider"></UISpeedSlider>
            </HBox>
        </VBox>
    </bottom>
    <stylesheets>
        <URL value="@../styles/main.css" />
    </stylesheets>
</BorderPane>