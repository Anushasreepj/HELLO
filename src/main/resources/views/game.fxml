<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<?import de.hdm_stuttgart.mi.gameoflife.controllers.components.UIZoomableScrollPane?>
<?import javafx.scene.shape.Box?>
<?import de.hdm_stuttgart.mi.gameoflife.controllers.components.UIZoomSlider?>
<?import de.hdm_stuttgart.mi.gameoflife.controllers.components.UISpeedSlider?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="de.hdm_stuttgart.mi.gameoflife.controllers.GameController">
    <top>
        <HBox alignment="CENTER_LEFT">
            <BorderPane.margin>
                <Insets left="15" right="15" top="15" bottom="15"/>
            </BorderPane.margin>
            <Button prefHeight="32" text="Back" onAction="#navigateToMenu"/>
            <spacing>15</spacing>
            <Text>Conway's Game of Life</Text>
        </HBox>
    </top>
    <left></left>
    <right></right>
    <center>
        <HBox alignment="CENTER" id="wrapper" fx:id="wrapper"></HBox>
    </center>
    <bottom>
        <VBox>
            <BorderPane.margin>
                <Insets left="15" right="15" top="15" bottom="15"/>
            </BorderPane.margin>
            <HBox alignment="CENTER">
                <BorderPane.margin>
                    <Insets left="15" right="15" top="15" bottom="15"/>
                </BorderPane.margin>
                <Button prefWidth="80" prefHeight="32" text="&#9632;  Reset" onAction="#resetClicked"/>
                <spacing>10</spacing>
                <Button prefWidth="80" prefHeight="32" text="&#10074;  Pause" onAction="#pauseClicked"/>
                <spacing>10</spacing>
                <Button prefWidth="80" prefHeight="32" text="&#9654;  Start" onAction="#startClicked"/>
                <spacing>10</spacing>
                <Button prefWidth="80" prefHeight="32" text="&#9654;&#9654;  Next" onAction="#nextClicked"/>
                <spacing>10</spacing>
                <Text>Generation: 0</Text>
            </HBox>
            <spacing>30</spacing>
            <HBox alignment="CENTER">
                <BorderPane.margin>
                    <Insets left="15" right="15" top="15" bottom="15"/>
                </BorderPane.margin>
                <Label>Zoom:</Label>
                <UIZoomSlider id="zoomSlider" fx:id="zoomSlider"></UIZoomSlider>
                <spacing>55</spacing>
                <Label>Speed:</Label>
                <UISpeedSlider id="speedSlider" fx:id="speedSlider"></UISpeedSlider>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>