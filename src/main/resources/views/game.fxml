<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<?import de.hdm_stuttgart.mi.gameoflife.controllers.components.UIZoomableScrollPane?>
<?import javafx.scene.shape.Box?>
<?import de.hdm_stuttgart.mi.gameoflife.controllers.components.UIZoomSlider?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="de.hdm_stuttgart.mi.gameoflife.controllers.GameController">
    <top>
        <HBox alignment="CENTER_LEFT">
            <BorderPane.margin>
                <Insets left="15" right="15" top="15" bottom="15"/>
            </BorderPane.margin>
            <Button prefHeight="32" text="Back" onAction="#navigateToMenu"/>
            <spacing>15</spacing>
            <Text>Conway's Game of Life</Text>
        </HBox>
    </top>
    <left></left>
    <right></right>
    <center>
        <HBox alignment="CENTER" id="wrapper" fx:id="wrapper"></HBox>
    </center>
    <bottom>
        <HBox>
            <BorderPane.margin>
                <Insets left="15" right="15" top="15" bottom="15"/>
            </BorderPane.margin>
            <UIZoomSlider id="zoomSlider" fx:id="zoomSlider"></UIZoomSlider>
            <spacing>35</spacing>
            <Button prefWidth="80" prefHeight="32" text="&#9632;  Reset" onAction="#navigateToMenu"/>
            <spacing>10</spacing>
            <Button prefWidth="80" prefHeight="32" text="&#10074;  Pause" onAction="#navigateToMenu"/>
            <spacing>10</spacing>
            <Button prefWidth="80" prefHeight="32" text="&#9654;  Start" onAction="#navigateToMenu"/>
            <spacing>10</spacing>
            <Button prefWidth="80" prefHeight="32" text="&#9654;&#9654;  Next" onAction="#navigateToMenu"/>
        </HBox>
    </bottom>
</BorderPane>